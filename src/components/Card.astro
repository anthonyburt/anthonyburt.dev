---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<div class:list={['card', className]}>
  {title && <h3>{title}</h3>}
  <slot />
</div>

<style>
  .card {
    background: var(--surface);
    border: 1px solid rgba(244, 245, 247, 0.08);
    border-radius: var(--radius-md);
    padding: 18px;
    transition:
      transform 0.2s ease,
      border-color 0.2s ease,
      box-shadow 0.2s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: 0 16px 32px 0 rgba(0, 0, 0, 0.4);
  }

  .card:hover {
    transform: translateY(-2px);
    border-color: rgba(244, 245, 247, 0.16);
    box-shadow: 0 12px 24px -8px rgba(0, 0, 0, 0.3);
  }

  .card h3 {
    margin: 0 0 16px;
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.25rem;
    color: var(--ink);
  }
</style>
